<Application x:Class="Snake.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Snake"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor">#201127</SolidColorBrush>
        <SolidColorBrush x:Key="GridBackgroundColor">#201433</SolidColorBrush>
        <SolidColorBrush x:Key="GridLineColor">#FF9612</SolidColorBrush>
        <SolidColorBrush x:Key="TextColor">#20C20E</SolidColorBrush>
        <SolidColorBrush x:Key="OverlayColor">#7F000000</SolidColorBrush>
        <!-- Comment out line below to change text font-->
        <!--<FontFamily x:Key="MainFont">Assets/#Droid Sans Mono</FontFamily>-->
        <FontFamily x:Key="MainFont">Assets/#OCR A Extended</FontFamily>
        
    </Application.Resources>
</Application>
